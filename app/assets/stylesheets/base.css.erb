/******************************************************************************/
/*  Base styles                             	                                */
/******************************************************************************/
html {
  background-color: #fff;
}

body {
  margin: 0px;
  padding: 0px;
  font-family: 'Work Sans', sans-serif;
  color: black;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: 'Space Mono', monospace;
  font-weight: bold;
}

a {
  text-decoration-color: #FFC000;
  color: black;
  font-weight: bold;
}

a:visited {
  color: black;
}

.three-columns {
  display: flex;
}

.three-columns>div {
  width: 33%;
}

@media screen and (max-width: 680px) {
  .three-columns {
    flex-direction: column;
  }

  .three-columns>div {
    width: 100%;
  }
}